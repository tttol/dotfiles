{
    "workbench.colorTheme": "Default Dark+",
    "plantuml.render": "PlantUMLServer",
    "plantuml.server": "http://localhost:8081",
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "python.testing.autoTestDiscoverOnSaveEnabled": false,
    // "boot-java.rewrite.reconcile": true,
    "git.confirmSync": false,
    "[python]": {
        "editor.formatOnType": true
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    // "lldb.suppressUpdateNotifications": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // "npm.keybindingsChangedWarningShown": true,
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "update.showReleaseNotes": false,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "java.jdt.ls.java.home": "/Library/Java/JavaVirtualMachines/amazon-corretto-21.jdk/Contents/Home",
    "editor.codeActionsOnSave": { 
        "source.organizeImports": "explicit"
    },
    "spring-boot.ls.java.home": "/Library/Java/JavaVirtualMachines/amazon-corretto-21.jdk/Contents/Home",
      
    // 検索にマッチした箇所をハイライト
    "vim.hlsearch": true,
    // OS のクリップボードと同期
    "vim.useSystemClipboard": true,
    // モードごとにステータスバーの色
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.normal": ["#005f5f", "#fff"],
    "vim.statusBarColors.insert":["#5f0000", "#fff"], 
    "vim.statusBarColors.visual": ["#5f00af", "#fff"],
    "vim.statusBarColors.visualline": ["#005f87", "#fff"],
    "vim.statusBarColors.visualblock": ["#86592d", "#fff"],
    "vim.statusBarColors.replace": ["#000000", "#fff"],
    "vim.statusBarColors.commandlineinprogress": ["#86592d", "#fff"],
    "vim.statusBarColors.searchinprogressmode": ["#86592d", "#fff"],
    "vim.statusBarColors.easymotionmode": ["#86592d", "#fff"],
    "vim.statusBarColors.easymotioninputmode": ["#86592d", "#fff"],
    "vim.statusBarColors.surroundinputmode": [
        "#86592d",
        "#fff"
    ],
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f87",
        "statusBar.noFolderBackground": "#005f87",
        "statusBar.debuggingBackground": "#005f87",
        "statusBar.foreground": "#fff",
        "statusBar.debuggingForeground": "#fff"
    },
    "files.autoSave": "afterDelay",
    "editor.wordWrap": "off",
    "github.copilot.chat.localeOverride": "ja",
    "boot-java.change-detection.on": true,
    // If not specified searches for 'rubocop' executable available on PATH (default and recommended)
    "ruby.rubocop.executePath": "/Users/t-takahashi/.rbenv/shims/",

    // You can use specific path
    // "ruby.rubocop.executePath": "/Users/you/.rbenv/shims/"
    // "ruby.rubocop.executePath": "/Users/you/.rvm/gems/ruby-2.3.2/bin/"
    // "ruby.rubocop.executePath": "D:/bin/Ruby22-x64/bin/"

    // If not specified, it assumes a null value by default.
    "ruby.rubocop.configFilePath": "/Users/t-takahashi/.rbenv/versions/3.3.5/lib/ruby/gems/3.3.0/gems/rubocop-1.68.0/config/default.yml",

    // default true
    "ruby.rubocop.onSave": true,
}